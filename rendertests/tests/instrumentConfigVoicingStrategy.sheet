@load "./chords/default.chords";
@load "./voicings/guitar.lua";
@load "./voicings/voicelead.lua";
@load "./voicings/simple.lua";

device: SC1 midi 1;

tempo: 400;
instrumentDef: piano   SC1 3 0 0;
instrumentDef: bass    SC1 4 0 16;
instrumentDef: guitar    SC1 4 0 27;

instrumentConf: piano 
    voicingStrategy voicelead range tenor
    volume 100
    pan 0 
;

instrumentConf: 
    bass volume 100
    voicingStrategy voicelead range tenor
;

instrumentConf: 
    guitar volume 100 
    pan 100
;

[
type: template;
name: myTrack;
instrument: piano;
{
    <I II III IV V VI VII>1 |
    
}
]

[
type: template;
name: myTrack;
instrument: bass;
{
    /voicingStrategy: voicelead range contrabass/
    <I II III IV V VI VII>1 |
    
}
]

[
type: template;
name: myTrack;
instrument: guitar;
{
    <I II III IV V VI VII>1 |
    
}
]

[
type: sheet;
{
    C | F | G7 | C |
}
]
