



using "chords/default.chords";
using "pitchmaps/defaultMidiDrumMap.pitchmap";
using "lua/mods/swing.lua";
using "lua/mods/staccato.lua";
using "lua/voicings/simple.lua";
using "lua/voicings/guitar.lua";
using "lua/voicings/voicelead.lua";
using "lua/mods/guitarStroke.lua";
using "templates/drums.soca.template";
using "templates/bass.soca.template";
using "templates/rhythm.soca.template";
using "templates/piano.bossanova.template";


device: SC1 midi 2;
device: BC midi 2;

tempo: 120;
instrumentDef: drums   BC 9 0 0;
instrumentDef: bass   BC 0 0 34;
instrumentDef: rhythm2   BC 2 0 21;
instrumentDef: rhythm   BC 3 0 25;
instrumentDef: lead     SC1 5 0 11;
instrumentDef: piano   BC 4 0 0;

instrumentConf: bass   
    voicingStrategy simple range contrabass
    mod swing grid 16 offset 100
    volume 100
;

instrumentConf: piano   
    volume 90
;

instrumentConf: lead   
    volume 90
;

instrumentConf: rhythm  
    voicingStrategy guitar range mezzosoprano
    mod guitarStroke value 64
    volume 70
;

instrumentConf: rhythm2  
    mod swing grid 16 offset 50
    mod staccato value 90
    voicingStrategy simple range tenor
    volume 80
;

instrumentConf: drums  
    volume 80
;


[
instrument: piano; 
{
    /mod: staccato amount 100/ 
    (c)4 (cc,)4 (cxc,)4 (ccc,cc)4 | ((c'c,c')(c'c,c')(c'c,c'c,c'))2. c,,4~ | x1
}   
]


[
type: accomp;
{
    /template: 
        drums.soca.normal
        bass.soca.normal
        rhythm.soca.normal
        rhythm2.soca.normal
    /
    r| r | r | Fmaj7 | Fmaj7 | G7 | G7 |
    G-7 | Gb7 | Fmaj7 | Gb7 |
    Fmaj7 | Fmaj7 | G7 | G7 |
    G-7 | Gb7 | 
    Fmaj7 | Fmaj7 | Gbmaj7 | Gbmaj7 |
    /template: 
        drums.soca.bridge
        bass.soca.normal
        rhythm.soca.normal
        rhythm2.soca.bridge
    /

    B7 | B7 | F#-7 | F#-7 |
    D7 | D7 | G-7 | G-7 |
    Eb7 | Eb7 | A-7 | D7b9 |
    G-7 | C7b9 | 

    /template: 
        drums.soca.normal
        bass.soca.normal
        rhythm2.soca.normal
    / 
    
    Fmaj7 | Fmaj7 |
    G7 | G7 | G-7 | Gb7 |
    Fmaj7 | Gb9 |
}   
]
